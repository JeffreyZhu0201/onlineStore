<view class="container">
  <!-- 用户信息 -->
  <view class="user-card">
    <image class="avatar" src="{{ userInfo.avatarUrl || '/assets/images/default-avatar.png' }}" />
    <view class="info">
      <text class="nickname">{{ userInfo.nickName }}</text>
      <text class="tip" wx:if="{{ !isLogin }}" bind:tap="onLogin">点击登录</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <van-cell-group>
    <van-cell 
      title="我的订单" 
      is-link 
      data-url="/pages/order/order"
      bind:tap="onNavigate"
    />
    <van-cell 
      title="收货地址" 
      is-link 
      data-url="/pages/address/address"
      bind:tap="onNavigate"
    />
    <van-cell 
      title="我的收藏" 
      is-link 
      data-url="/pages/collect/collect"
      bind:tap="onNavigate"
    />
  </van-cell-group>
</view> 