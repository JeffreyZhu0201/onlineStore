.container {
  display: flex;
  height: 100vh;
  background-color: #fafafa;
}

.sidebar {
  width: 85px;
  height: 100%;
  background-color: #ffffff;
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.03);
}

.goods-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.sub-category {
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  background: #fff;
}

.sub-category-list {
  display: flex;
  padding: 0 20rpx;
}

.sub-category-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  flex-shrink: 0;  /* 防止项目被压缩 */
}

.sub-category-item.active {
  color: #ee0a24;
}

.goods-list {
  flex: 1;
  padding: 12px;
  overflow-y: auto;
}

.goods-card {
  margin-bottom: 12px !important;
  border-radius: 12px !important;
  overflow: hidden;
  background: #ffffff !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.van-card__title {
  font-size: 16px !important;
  font-weight: 500 !important;
  color: #4a4a4a !important;
}

.van-card__desc {
  color: #808080 !important;
}

.van-card__price {
  color: #FF8F00 !important;
  font-weight: 500 !important;
}

.goods-tags {
  margin: 8px 0;
}

.goods-tags .van-tag {
  margin-right: 8px;
  border-radius: 4px;
}

.van-tag--danger {
  background: #FFF3E0 !important;
  color: #FF8F00 !important;
  border-color: #FFE0B2 !important;
}

.van-tag--warning {
  background: #F1F8E9 !important;
  color: #4CAF50 !important;
  border-color: #DCEDC8 !important;
}

.loading-status {
  padding: 16px 0;
  text-align: center;
  color: #808080;
}

.no-more {
  font-size: 14px;
  color: #808080;
  padding: 16px 0;
  text-align: center;
}

/* 自定义侧边栏样式 */
.van-sidebar-item {
  padding: 16px 12px !important;
  font-size: 14px !important;
  color: #4a4a4a !important;
}

.van-sidebar-item--selected {
  color: #4CAF50 !important;
  border-color: #4CAF50 !important;
}