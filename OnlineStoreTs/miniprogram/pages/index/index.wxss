/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding-bottom: 20px;
  background-color: #f7f8fa;
}

.goods-list {
  padding: 0 16px;
}

.goods-list .van-card {
  margin-bottom: 12px;
  background-color: #ffffff;
  border-radius: 8px;
}

.banner-container {
  padding: 12px;
}

.banner {
  height: 150px;
  border-radius: 8px;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  background: linear-gradient(to right, #4CAF50, #81C784);
  color: #ffffff;
  border-radius: 0 0 24px 24px;
  margin-bottom: 16px;
}

.header .title {
  font-size: 24px;
  font-weight: 600;
}

.header .location {
  display: flex;
  align-items: center;
  font-size: 14px;
  opacity: 0.9;
}

.header .location van-icon {
  margin-right: 4px;
}

.van-search {
  padding: 8px 16px !important;
  background: transparent !important;
}

.van-search__content {
  border-radius: 8px !important;
  background: rgba(255, 255, 255, 0.95) !important;
}

.van-notice-bar {
  margin: 0 16px 16px;
  border-radius: 8px !important;
  color: #4CAF50 !important;
  background: #F1F8E9 !important;
}

.nav-grid {
  margin: 0 16px 16px !important;
  border-radius: 12px !important;
  overflow: hidden;
  background: #ffffff !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.van-grid-item__content {
  padding: 16px 8px !important;
}

.van-grid-item__icon {
  font-size: 28px !important;
  color: #4CAF50;
}

.van-grid-item__text {
  margin-top: 8px;
  color: #4a4a4a;
  font-size: 14px;
}

.category-tabs {
  display: flex;
  padding: 12px 16px;
  margin: 0 16px 16px;
  background: #ffffff;
  border-radius: 12px;
  overflow-x: auto;
  white-space: nowrap;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.category-item {
  padding: 8px 16px;
  margin-right: 12px;
  border-radius: 20px;
  font-size: 14px;
  color: #666666;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.category-item.active {
  color: #ffffff;
  background: linear-gradient(to right, #4CAF50, #81C784);
  box-shadow: 0 2px 4px rgba(76, 175, 80, 0.2);
}

.goods-card {
  margin-bottom: 12px !important;
  border-radius: 12px !important;
  overflow: hidden;
  background: #ffffff !important;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
  transition: transform 0.3s ease;
}

.goods-card:active {
  transform: scale(0.98);
}

.van-card__thumb {
  border-radius: 8px !important;
}

.van-card__title {
  font-size: 16px !important;
  font-weight: 500 !important;
  color: #4a4a4a !important;
}

.van-card__desc {
  color: #808080 !important;
}

.van-card__price {
  color: #FF8F00 !important;
  font-weight: 500 !important;
}

.goods-tags {
  margin: 8px 0;
}

.goods-tags .van-tag {
  margin-right: 8px;
  border-radius: 4px;
}

.van-tag--danger {
  background: #FFF3E0 !important;
  color: #FF8F00 !important;
  border-color: #FFE0B2 !important;
}

.van-tag--warning {
  background: #F1F8E9 !important;
  color: #4CAF50 !important;
  border-color: #DCEDC8 !important;
}

.van-button--danger {
  background: #4CAF50 !important;
  border-color: #4CAF50 !important;
}

.goods-footer {
  margin-top: 8px;
  text-align: right;
}

.loading-status {
  padding: 20px 0;
  text-align: center;
  color: #808080;
}

.no-more {
  font-size: 14px;
  color: #808080;
  padding: 20px 0;
  text-align: center;
}

.van-tabbar {
  box-shadow: 0 -1px 8px rgba(0, 0, 0, 0.03) !important;
  border-radius: 20px 20px 0 0 !important;
  overflow: hidden;
}

.van-tabbar-item {
  color: #808080 !important;
}

.van-tabbar-item--active {
  color: #4CAF50 !important;
}

.van-tabbar-item__icon {
  font-size: 24px !important;
}

.van-tabbar-item__text {
  font-size: 12px !important;
}
