<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 搜索栏 -->
    <van-search
      value="{{ searchValue }}"
      placeholder="{{ searchPlaceholder }}"
      bind:search="onSearch"
      shape="round"
      background="#ffffff"
    />

    <!-- 公告栏 -->
    <van-notice-bar
      text="{{ notice }}"
      left-icon="volume-o"
      mode="link"
    />

    <!-- 功能导航 -->
    <van-grid column-num="4" border="{{ false }}">
      <van-grid-item
        wx:for="{{ navItems }}"
        wx:key="text"
        icon="{{ item.icon }}"
        text="{{ item.text }}"
        bind:tap="onNavItemTap"
        data-index="{{ index }}"
      />
    </van-grid>

    <!-- 商品列表 -->
    <view class="goods-list">
      <van-card
        wx:for="{{ goodsList }}"
        wx:key="id"
        price="{{ item.price }}"
        desc="{{ item.desc }}"
        title="{{ item.title }}"
        thumb="{{ item.thumb }}"
        data-goods-id="{{ item.id }}"
        bind:tap="onGoodsTap"
      />
    </view>
  </view>
</scroll-view>
