.container {
  padding-bottom: 100px;
  background-color: #fafafa;
  -webkit-overflow-scrolling: touch;
}

.goods-swiper {
  height: 750rpx;
  background: #ffffff;
  border-radius: 0 0 24px 24px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.goods-info {
  margin: 16px;
  padding: 20px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 12px;
}

.current-price {
  font-size: 24px;
  font-weight: 500;
  color: #FF8F00;
}

.original-price {
  margin-left: 8px;
  font-size: 14px;
  color: #808080;
  text-decoration: line-through;
}

.sales {
  margin-left: auto;
  font-size: 14px;
  color: #808080;
}

.title {
  font-size: 18px;
  font-weight: 500;
  color: #4a4a4a;
  margin-bottom: 12px;
  line-height: 1.4;
}

.tags {
  display: flex;
  gap: 8px;
}

.detail-section {
  margin: 0 16px 16px;
  padding: 20px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  color: #4a4a4a;
  margin-bottom: 16px;
}

.description {
  font-size: 14px;
  color: #808080;
  line-height: 1.6;
}

/* 商品操作栏样式 */
.van-goods-action {
  z-index: 99 !important;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.03) !important;
  background: rgba(255, 255, 255, 0.98) !important;
}

.van-goods-action-icon {
  color: #808080 !important;
}

.van-goods-action-icon__icon {
  font-size: 22px !important;
  color: #4a4a4a !important;
}

.van-goods-action-button--first {
  background: #FFF3E0 !important;
  color: #FF8F00 !important;
}

.van-goods-action-button--last {
  background: #4CAF50 !important;
  color: #ffffff !important;
}

/* 规格选择弹出层样式 */
.sku-popup {
  padding: 24px 20px;
  border-radius: 24px 24px 0 0;
  background: #ffffff;
}

.sku-header {
  display: flex;
  margin-bottom: 24px;
}

.sku-info {
  margin-left: 16px;
  flex: 1;
}

.sku-price {
  font-size: 20px;
  font-weight: 500;
  color: #FF8F00;
  margin-bottom: 8px;
}

.sku-selected {
  font-size: 14px;
  color: #808080;
}

.sku-row {
  margin-bottom: 20px;
}

.sku-row-title {
  font-size: 14px;
  color: #4a4a4a;
  margin-bottom: 12px;
}

.sku-radio {
  margin-right: 12px;
  margin-bottom: 12px;
}

.van-radio__label {
  color: #4a4a4a !important;
}

.van-radio__icon--checked {
  background-color: #4CAF50 !important;
  border-color: #4CAF50 !important;
}

.van-stepper {
  margin-top: 16px;
}

.van-stepper__minus,
.van-stepper__plus {
  background-color: #f5f5f5 !important;
  color: #4a4a4a !important;
}

.van-stepper__input {
  background-color: #f5f5f5 !important;
  color: #4a4a4a !important;
}

/* 加载状态 */
.page-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #808080;
}

/* 详情图片 */
.detail-images {
  margin: 0 16px;
}

.detail-image {
  margin-bottom: 12px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
}

/* 展开详情按钮 */
.show-detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px 0;
  color: #4CAF50;
  font-size: 14px;
  transition: opacity 0.3s;
}

.show-detail-btn:active {
  opacity: 0.8;
}

/* 优化滚动性能 */
.container {
  -webkit-overflow-scrolling: touch;
}

.detail-images {
  will-change: transform;
}

.loading-status {
  padding: 16px 0;
  text-align: center;
  color: #969799;
}

.no-more {
  font-size: 14px;
  color: #969799;
} 