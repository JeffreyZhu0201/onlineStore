/* pages/Payment/Payment.wxss */

.order-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin: 24rpx 24rpx 0 24rpx;
  padding: 24rpx;
}
.order-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}
.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.order-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.order-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 8rpx;
}
.order-status {
  font-size: 24rpx;
  color: #1989fa;
}