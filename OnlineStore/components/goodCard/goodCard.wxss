.good-card {
  box-sizing: border-box;
  display: flex;
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.good-card__img {
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
}

.good-card__img image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.good-card__info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good-card__info__title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.good-card__info__intro {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.good-card__info__price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-top: auto;
}

.good-card__btn {
  padding: 24rpx;
  display: flex;
  align-items: flex-end;
}

.good-card__btn__add {
  width: 64rpx;
  height: 64rpx;
  padding: 0;
  border: none;
  background: #ff4d4f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.good-card__btn__add t-icon {
  color: #fff;
  font-size: 36rpx;
}

.good-card__btn__add:active {
  transform: scale(0.9);
  background: #ff6b6b;
}